<?xml version="1.0"?>
<launch>
  <!-- Robotiq 2f 140 gripper -->

  <!-- Load driver -->
  <include file="$(find robotiq_2f_gripper_control)/launch/robotiq_2f_gripper_serial.launch">
    <arg name="gripper_name" default="gripper" />
    <arg name="slave_number" default="9" />
    <arg name="activate" default="True" />
    <arg name="port" default="/dev/ttyUSB0" />
  </include>

  <!-- Load action server -->
  <include file="$(find robotiq_2f_gripper_action_server)/launch/robotiq_2f_gripper_action_server.launch"/>

  <!-- Load model -->
  <include file="$(find robotiq_description)/launch/load_robotiq_2f_140.launch"/>
  
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />

  <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher">
    <param name="use_gui" value="false"/>
    <rosparam param="source_list">[/joint_states]</rosparam>
  </node>

  <!-- Load MoveIt move_group -->
  <include file="$(find robotiq_2f_140_moveit_config)/launch/move_group.launch"/>

  <!-- Load RViz -->
  <include file="$(find robotiq_2f_140_moveit_config)/launch/moveit_rviz.launch"/>
</launch>
